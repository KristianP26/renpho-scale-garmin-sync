{
  "name": "ble-scale-sync",
  "version": "1.6.0",
  "description": "Universal BLE Smart Scale bridge. Captures body composition from Renpho, Xiaomi & 20+ others, syncs to Garmin Connect, Strava, MQTT (Home Assistant), InfluxDB, Webhooks, Ntfy & local files. Headless CLI for Raspberry Pi, Linux, macOS & Windows.",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "setup": "tsx src/wizard/index.ts",
    "setup-garmin": "python3 garmin-scripts/setup_garmin.py",
    "setup-strava": "tsx src/exporters/strava-setup.ts",
    "scan": "tsx src/scan.ts",
    "diagnose": "tsx src/diagnose.ts",
    "validate": "tsx src/config/validate-cli.ts",
    "test": "vitest run",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "smart-scale",
    "garmin",
    "scale",
    "ble",
    "bluetooth",
    "body-composition",
    "health"
  ],
  "author": "KristiÃ¡n Partl",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@inquirer/prompts": "^8.3.0",
    "@stoprocent/noble": "^2.3.16",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "dotenv": "^17.3.1",
    "encoding": "^0.1.13",
    "mqtt": "^5.10.0",
    "node-ble": "^1.13.0",
    "tsx": "^4.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.3",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  }
}
